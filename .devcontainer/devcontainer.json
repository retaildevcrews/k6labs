{
	"name": "k6labs",
	"runArgs": [ "--init", "--privileged" ],
	"overrideCommand": false,
	"features": {
		"ghcr.io/devcontainers/features/azure-cli:1": {
			"version": "2.42.0",
			"installBicep": true

		},
		"ghcr.io/devcontainers/features/powershell:1": {
			"version": "7.3"
		}
	},
	"customizations": {
		"vscode": {
			// Set container specific settings
			"settings": {
				"terminal.integrated.defaultProfile.linux": "zsh"
			},

			"hostRequirements": {
				"cpus": 4
			},
		
		  // Forwarded ports
			"forwardPorts": [
				8080,
				30000,
				30080
			],
			// Port Labels
			"portsAttributes": {
				"30000": { "label": "Istio IngressGateway LoadBalancer NodePort" },
				"30080": { "label": "Ngsa NodePort" }
			},

			// Added for local developement
  			// Without this port forwarding to Windows Network sometime fails
  			"appPort": [8080],

			// Install extensions
			"extensions": [
				"ms-azuretools.vscode-docker",
				"ms-azuretools.vscode-bicep",
				"ms-python.python",
				"eamodio.gitlens",
				"davidanson.vscode-markdownlint",
				"gruntfuggly.todo-tree",
				"ms-kubernetes-tools.vscode-kubernetes-tools",
				"visualstudioexptteam.vscodeintellicode"
			]
		}
	},

    "onCreateCommand": "/bin/bash ./.devcontainer/on-create.sh"
}
